<h1>編集画面</h1>

<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |f| %>
 
  <h4>名前</h4>
  <%= f.text_field :name %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <div><%= f.submit '投稿' %></div>
<% end %>