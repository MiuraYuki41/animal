<h1>編集画面</h1>

<% if @group.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @group do |f| %>
 
  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <div><%= f.submit '投稿' %></div>
<% end %>